{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Playbook",
  "description": "A set of rules to lint a contract.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "must_have_clause",
              "forbidden_phrase",
              "numeric_limit",
              "preferred_wording",
              "forbidden_phrase_in_clause",
              "ordering",
              "semantic_policy"
            ]
          },
          "clauseName": {
            "type": "string"
          },
          "phrase": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "clause": {
            "type": "string"
          },
          "policyText": {
            "type": "string"
          }
        },
        "required": ["id", "type"]
      }
    }
  },
  "required": ["name", "rules"]
}
